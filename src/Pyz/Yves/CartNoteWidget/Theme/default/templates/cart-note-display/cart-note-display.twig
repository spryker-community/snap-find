{% extends template('widget') %}

{% define data = {
    label: '',
    note: null
} %}

{% block body %}
    {% if data.note is not empty %}
        {% block content %}
            {% include molecule('cart-item-note', 'CartNoteWidget') with {
                data: {
                    isNoteNotEmpty: true,
                    canWrite: false,
                    label: data.label,
                    note: data.note
                }
            } only %}
        {% endblock %}
    {% endif %}
{% endblock %}
