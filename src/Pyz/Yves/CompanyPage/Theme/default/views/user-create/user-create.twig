{% extends view('user-create', '@SprykerShop:CompanyPage') %}

{% block breadcrumbs %}
    {% include molecule('breadcrumb') with {
        data: {
            steps: [
                {
                    label: 'company.account.page-title' | trans,
                    url: url('company/overview'),
                }, {
                    label: data.title,
                    url: url('company/user'),
                }, {
                    label: 'company.account.company_user.add' | trans,
                },
            ],
        },
    } only %}
{% endblock %}

{% block companyContent %}
    {% include molecule('action-bar') with {
        data: {
            title: 'company.account.company_user.add' | trans,
        },
    } only %}

    {% include molecule('form') with {
        modifiers: ['narrow'],
        data: {
            form: data.form,
            shouldRequireMessage: true,
            options: {
                action: url('company/user/create'),
            },
            layout: {
                salutation: 'col col--sm-12 col--md-3',
                first_name: 'col col--sm-12 col--md-4',
                last_name: 'col col--sm-12 col--md-5',
            },
            submit: {
                enable: true,
                class: 'form__action--expand-sm-md form__action--sm-md-first button',
            },
            cancel: {
                enable: true,
                url: url('company/user'),
                text: 'general.back.button' | trans,
                class: 'form__action--expand-sm-md button button--hollow',
                icon: null,
            },
        },
    } only %}
{% endblock %}
