{% extends view('role-permission-configure', '@SprykerShop:CompanyPage') %}

{% block breadcrumbs %}
    {% include molecule('breadcrumb') with {
        data: {
            steps: [
                {
                    label: 'company.account.page-title' | trans,
                    url: url('company/overview'),
                }, {
                    label: 'company.account.company_role' | trans,
                    url: url('company/company-role'),
                }, {
                    label: 'company.account.company_role.permission.configure' | trans,
                },
            ],
        },
    } only %}
{% endblock %}

{% block companyContent %}
    {% include molecule('action-bar') with {
        data: {
            title: 'company.account.company_role.permission.configure' | trans,
        },
    } only %}

    {% include molecule('form') with {
        modifiers: ['narrow'],
        data: {
            form: data.form,
            layout: {
                name: 'col col--sm-12 col--lg-6',
                is_default: 'col col--sm-12 col--lg-6',
            },
            submit: {
                enable: true,
                class: 'form__action--expand-sm-md form__action--sm-md-first button',
            },
            cancel: {
                enable: true,
                icon: null,
                class: 'form__action--expand-sm-md button button--hollow',
                url: url('company/company-role'),
                text: 'general.back.button' | trans,
            },
        }
    } only %}
{% endblock %}
