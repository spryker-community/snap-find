{% extends model('component') %}

{% define config = {
    name: 'navigation-footer',
} %}

{% define data = {
    items: required,
} %}

{% block body %}
    {% for item in data.items %}
        {% include molecule('navigation-footer-item') with {
            class: 'col col--sm-12 col--md-4',
            data: {
                category: item.category,
                title: item.title,
                toggleClass: config.jsName ~ '-' ~ item.category,
            },
        } only %}
        {% include molecule('toggler-accordion') with {
            attributes: {
                'wrap-class-name': config.jsName ~ '-' ~ item.category,
                'trigger-class-name': config.jsName ~ '-' ~  item.category ~ '__trigger',
                'class-to-toggle': 'is-hidden-sm-only',
            },
        } only %}
    {% endfor %}
{% endblock %}
