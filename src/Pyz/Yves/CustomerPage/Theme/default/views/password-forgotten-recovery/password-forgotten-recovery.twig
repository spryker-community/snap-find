{% extends view('password-forgotten-recovery', '@SprykerShop:CustomerPage') %}

{% block title %}{% endblock %}

{% block content %}
    {% embed organism('section') with {
        data: {
            title: 'customer.password.restore' | trans,
            innerClass: 'col col--sm-12 col--md-9 col--lg-8 col--xl-6',
        },
        modifiers: ['center', 'last', 'mobile-center'],
        embed: {
            form: data.form,
        },
    } only %}
        {% block inner %}
            {% include molecule('form') with {
                class: 'box',
                data: {
                    form: embed.form,
                    shouldRequireMessage: true,
                    submit: {
                        enable: true,
                        class: 'button button--big form__action--sm-lg-first',
                    },
                    cancel: {
                        enable: true,
                        url: url('login'),
                        class: 'button button--hollow button--medium',
                        text: 'general.cancel.button' | trans,
                        icon: null,
                    },
                },
            } only %}
        {% endblock %}
    {% endembed %}
{% endblock %}
